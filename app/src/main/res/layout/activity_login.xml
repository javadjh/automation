<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".loginPage.view.LoginActivity">
    <data>
        <import type="android.view.View"/>
        <variable
            name="login"
            type="com.scanner.demo.loginPage.viewmodel.LoginVM" />
    </data>
    <RelativeLayout
        android:textDirection="rtl"
        android:layoutDirection="rtl"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView

            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/largeText"
            android:textColor="@color/white"
            android:text="@string/loginText"
            android:fontFamily="@font/vazir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_baseline_person_24"
                android:id="@+id/usernameLogin"
                android:text="@={login.username}"
                android:textDirection="rtl"
                android:fontFamily="@font/vazir"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="@string/getUsernameHint"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:background="@drawable/style_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:drawableRight="@drawable/ic_baseline_security_24"
                android:drawablePadding="10dp"
                android:id="@+id/passwordLogin"
                android:text="@={login.password}"
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                android:inputType="textPassword"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/vazir"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="@string/passwordTextLogin"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:background="@drawable/style_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:text="@string/loginToAppText"
                android:fontFamily="@font/vazir"
                android:textSize="@dimen/buttonSize"
                android:background="@drawable/style_button"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> login.getUserInformationForLogin(login.username,login.password)}"/>
        </LinearLayout>
        <TextView
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/smallSize"
            android:fontFamily="@font/vazir"
            android:text="@string/appVersionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</layout>
