<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="DraftKartableVM"
            type="com.scanner.demo.mainApp.kartable.viewmodel.DraftKartableVM" />
    </data>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:textDirection="rtl"
        android:layoutDirection="rtl"
        android:layout_height="match_parent"
        tools:context=".mainApp.kartable.view.DraftKartableFragment">
        <RelativeLayout
            android:background="@color/black"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyDraftKartable"
                android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                android:clipChildren="false"
                android:paddingTop="20dp"
                android:textDirection="rtl"
                android:layoutDirection="rtl"
                tools:listitem="@layout/item_draft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </FrameLayout>
</layout>
