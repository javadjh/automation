<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mainApp.kartable.view.KartableFragment">
    <data>
        <variable
            name="KartableFragment"
            type="com.scanner.demo.mainApp.kartable.view.KartableFragment" />
        <import type="android.view.View"/>
        <variable
            name="fragmentManager"
            type="androidx.fragment.app.FragmentManager" />
    </data>
    <FrameLayout
        android:textDirection="ltr"
        android:layoutDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layoutDirection="ltr"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/lightBlack"
                app:cardElevation="@dimen/cardElevation"
                android:id="@+id/tabCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.tabs.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/tabBarActionBar"/>
            </androidx.cardview.widget.CardView>
            <androidx.viewpager.widget.ViewPager
                android:layout_below="@id/tabCard"
                android:id="@+id/kartableViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:cardElevation="@dimen/cardElevation"
                    app:cardCornerRadius="@dimen/radius"
                    android:id="@+id/appMenu"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    app:cardBackgroundColor="@color/lightBlack"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textDirection="rtl"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/fileManagerIcon"
                            android:src="@drawable/ic_folder"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:tint="@color/white" />
                        <ImageView
                            android:id="@+id/archiveIcon"
                            android:src="@drawable/ic_folderd"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:tint="@color/white" />
                        <ImageView
                            android:id="@+id/kartableIcon"
                            android:src="@drawable/ic_email_envelope"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:tint="@color/purple" />
                        <ImageView
                            android:id="@+id/homePageIcon"
                            android:src="@drawable/ic_home"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            app:tint="@color/white" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    android:layoutDirection="rtl"
                    android:layout_alignParentLeft="true"
                    android:textDirection="rtl"
                    android:tint="@color/black"
                    android:layout_above="@id/appMenu"
                    android:src="@drawable/ic_baseline_add_24"
                    app:backgroundTint="@color/purple"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>

    </FrameLayout>
</layout>
