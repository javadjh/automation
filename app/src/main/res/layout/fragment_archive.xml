<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mainApp.archive.view.ArchiveFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:fontFamily="@font/vazir"
                android:textSize="@dimen/largeText"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:text="آرشیو نامه ها"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:cardElevation="@dimen/cardElevation"
                    app:cardCornerRadius="@dimen/radius"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    app:cardBackgroundColor="@color/lightBlack"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textDirection="rtl"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/fileManagerIcon"
                            android:src="@drawable/ic_folder"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:tint="@color/white" />
                        <ImageView
                            android:id="@+id/archiveIcon"
                            android:src="@drawable/ic_folderd"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:tint="@color/purple" />
                        <ImageView
                            android:id="@+id/kartableIcon"
                            android:src="@drawable/ic_email_envelope"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:tint="@color/white" />
                        <ImageView
                            android:id="@+id/homePageIcon"
                            android:src="@drawable/ic_home"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            app:tint="@color/white" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>
</layout>
